@model IEnumerable<CodeFirstProjMVC.Models.DepartmentVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@Html.ActionLink("AddDepartment", "AddDepartment")

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditDepartment", new { id=item.DepartmentId }) |
                @Html.ActionLink("Delete", "DeleteDepartment", new {  id=item.DepartmentId })
            </td>
        </tr>
    }

</table>